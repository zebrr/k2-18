{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/ConceptDictionary.schema.json",
  "title": "ConceptDictionary",
  "type": "object",
  "properties": {
    "concepts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["concept_id", "term", "definition"],
        "properties": {
          "concept_id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9:_-]+$"
          },
          "term": {
            "type": "object",
            "required": ["primary"],
            "properties": {
              "primary": {
                "type": "string",
                "minLength": 1
              },
              "aliases": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "uniqueItems": true
              }
            }
          },
          "definition": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["concepts"],
  "additionalProperties": true
}